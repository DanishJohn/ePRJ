@model IEnumerable<ePRJ.Models.Vehicle>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_GeneralLayout.cshtml";
}
<div class="panel jumbo-background">
    <div class="panel-heading">
        <h1 style="font-family:'Bodoni MT Poster'; font-size:300px">Sky's Showroom</h1>
    </div>
    <div class="panel-body">
        <h3>Welcome to Sky's Showroom where excellency is our motto to great customer service and satisfaction</h3>

        <div class="row">
            <div class="well col-md-4">
               <h1> <b>At Sky's Showroom, We will always commit to quality. Think. Feel. Drive</b></h1>
            </div>
            <div class="well col-md-4">
                <h1><b>Your new experience of motoring.</b></h1>
            </div>
            <div class="well col-md-4">
                <h1><b>Power for your control</b></h1>
            </div>
        </div>
    </div>
</div>

<div class="row">
    @if (Model.Count() > 3)
    {
        for (var i = 0; i < 3; i++)
        {
            <div class="item col-lg-4 col-xs-4">
                <div class="thumbnail">
                    <img src="@Url.Content("~/Images/" + Path.GetFileName(Model.ElementAt(i).img_path))" />
                </div>
                <div class="caption">
                    <h3>@Html.ActionLink(Model.ElementAt(i).vehicle_name, "Details", "Home", new { id = Model.ElementAt(i).vehicle_id }, null)</h3>
                    <p>$@Model.ElementAt(i).vehicle_price</p>
                    <p>Brand: @Model.ElementAt(i).vehicle_brand</p>
                    <p>In stock: @Model.ElementAt(i).vehicle_stock</p>
                </div>
            </div>
        }
    }
    else
    {
        for (var i = 0; i < Model.Count(); i++)
        {
            <div class="item col-lg-4 col-xs-4">
                <div class="thumbnail">
                    <img src="@Url.Content("~/Images/" + Path.GetFileName(Model.ElementAt(i).img_path))" />
                </div>
                <div class="caption">
                    <h3>@Html.ActionLink(Model.ElementAt(i).vehicle_name, "Details", "Home", new { id = Model.ElementAt(i).vehicle_id }, null)</h3>
                    <p>$@Model.ElementAt(i).vehicle_price</p>
                    <p>Brand: @Model.ElementAt(i).vehicle_brand</p>
                    <p>In stock: @Model.ElementAt(i).vehicle_stock</p>
                </div>
            </div>
        }
    }



</div>